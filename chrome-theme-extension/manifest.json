{
    "manifest_version": 3,
    "name": "Chrome Theme Extension",
    "description": "Provides color theme for chrome browsers",
    "version": "1.0",
    "action": {
      "default_popup": "index.html",
      "default_icon": "./images/icon.png"
    },
    "content_scripts": [
            {
            "js": ["scripts/content.js"],
            "matches": [
              "<all_urls>"
            ]
        }
    ]
  }